extends layout.pug

block append scripts
    script(src="js/home.js")

block content
    div(class="row" style="margin-top: 20px")
        div(class="col-lg-3 col-md-2")
        div(class="col-lg-6 col-md-8")
            div(class='container')
                div(class="card")
                    div(class="card-header bg-primary text-white text-center")
                        h2 Self-Authed
                    div(class="card-body")
                        div(class='mb-3')
                            p(class="card-text") You are logged as #{username}
                        if admin == true
                            div(class='mb-3')
                                a(href="/admin" class="btn btn-primary" role="button") Admin page
                        div(class='mb-1')
                            label(for="password" class="form-label") Change password
                            input(id="password" type="password" class="form-control" name="password"
                                    aria-describedby="validation-password" placeholder="Enter password")
                            div(id="validation-password" class="invalid-feedback")
                        div(class='mb-2')
                            input(id="password-repeat" type="password" class="form-control" name="password-repeat"
                                    aria-describedby="validation-password-repeat valid-change"
                                    placeholder="Enter same password")
                            div(id="validation-password-repeat" class="invalid-feedback")
                            div(id="valid-change" class="valid-feedback")
                        div(class='mb-1')
                            button(id="change-password-btn" type="submit" class="btn btn-primary") Change
                    div(class="card-footer")
                        a(href="/logout" class="btn btn-primary" role="button") Logout
    div(class='container' style="margin-top: 20px")
        div(class="row")
            div(class="col-lg-3 col-md-2")
            div(class="col-lg-6 col-md-8")
                div(class="card")
                    div(class="card-header bg-primary text-white text-center")
                        h2 Permissions
                    div(class="card-body")
                        div(class='container')
                            ul(id="permissions" class="list-group list-group-flush")